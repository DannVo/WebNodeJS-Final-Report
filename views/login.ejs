<section class="vh-100">
	<div class="container-fluid">
		<div class="row">
			<div class="col-sm-6 text-black">
				<% if(success.length> 0){ %>
				<div class="alert alert-success alert-dismissible fade show mt-2" role="alert">
					<strong>Success!</strong>
						<%=success%>
					<button type="button" class="btn-close" data-bs-dismiss="alert"
						aria-label="Close"></button>
				</div>
				<%}%>
				<div class="px-5 ms-xl-4">
					<img src="/assets/img/logo.png" alt="Flair Mail Logo" srcset="" width="100" height="100">
					<span class="h1 fw-bold mb-0">Flair Mail</span>
				</div>

				<div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">

					<form action="" method="post" style="width: 23rem;">

						<h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Log in</h3>

						<div class="form-outline mb-4">
							<input style="font-size: 16px;" type="email" name="email" id="form2Example18"
								class="form-control form-control-lg" value="<%=email%>" placeholder="example@fmail.com"/>
							<label class="form-label" for="form2Example18">Email address</label>
						</div>

						<div class="form-outline mb-1">
							<input style="font-size: 16px;" type="password" name="password" id="form2Example28"
								class="form-control form-control-lg" placeholder="******"/>
							<div class="d-flex justify-content-between">
								<label class="form-label" for="form2Example28">Password</label>
								<p class="small pb-lg-2"><a class="text-muted" href="/account/forgot-password">Forgot password?</a></p>
							</div>
						</div>
						<% if(error.length> 0){ %>
							<div class="alert alert-<%=errorType%> alert-dismissible fade show" role="alert">
								<strong><%=errorTitle%>!</strong>
									<%=error%>
								<button type="button" class="btn-close" data-bs-dismiss="alert"
									aria-label="Close"></button>
							</div>
						<%}%>
						<div class="pt-1 mb-4">
							<button class="btn btn-info btn-lg btn-block px-4 py-1 text-white" type="submit">Login</button>
						</div>

						<p>Don't have an account? <a href="/register" class="link-info">Register here</a></p>

					</form>

				</div>

			</div>
			<div class="col-sm-6 px-0 d-none d-sm-block">
				<img src="/assets/img/test2.avif" alt="Login image" class="w-100 vh-100"
					style="object-fit: cover; object-position: left;">
			</div>
		</div>
	</div>
</section>